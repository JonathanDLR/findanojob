{% extends 'base.html.twig' %}

{% block body %}
    {% if not app.user %}
       <div class="container">
        <div class="row">
            <div class="col text-center">
                <div class="col-xs-12">
                    <h1>Espace de connexion</h1>
                </div>

                <form action="{{ path('app_login') }}" method="post">

                    <fieldset>
                        <div clas="form-group">
                            <label for="username">Username</label>
                            <input type="text" name="_username" placeholder="Username">
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" name="_password" placeholder="Password">
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                        <button role="button" type="submit" class="btn btn-primary btn-lg"><i class="fa fa-sign-in" aria-hidden="true"></i>Connexion</button>
                    </fieldset>
                </form>
                <button class="btn btn-primary btn-lg">Inscription</button>
            </div>
        </div> 
    {% else %}    
        Bienvenue {{ app.user.username }}
    {% endif %}
{% endblock %}